# Reddit API Credentials (from https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=ScoutApp/1.0
REDDIT_USERNAME=your_username # Optional, needed for posting
REDDIT_PASSWORD=your_password # Optional, needed for posting

# AI API Credentials (OpenRouter)
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1 
# Default: tier 1 = google/gemini-2.0-flash-exp:free (or similar), tier 2 = anthropic/claude-3-haiku

# Application Settings
SCOUT_DB_PATH=scout.db
SCOUT_SCHEDULE_HOURS=6,18 # Run at 6 AM and 6 PM

# Authentication (For Deployment)
# Generate hash with: python -c "import streamlit_authenticator as stauth; print(stauth.Hasher(['your_password']).generate()[0])"
AUTH_PASSWORD_HASH=
AUTH_COOKIE_NAME=scout_auth
AUTH_COOKIE_KEY=some_secret_key_change_me
